<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    >
  
    <LinearLayout
    	android:id="@+id/video_zqsp_gengduo"
		android:layout_width="wrap_content"
		android:layout_height="21dp"
		android:orientation="horizontal"
		android:background="@drawable/videos_zhengqishipin">
		<TextView
			android:id="@+id/video_title"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:textSize="15dp"
			android:layout_marginLeft="30dp"
			android:text="整期视频"
			android:textColor="#ffffff"></TextView>
	</LinearLayout>
	
	<LinearLayout 
	android:id="@+id/layout1"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="100px"
    android:gravity="center_vertical"
    android:background="@drawable/news_list_context_bg">
    <ImageView
		android:id="@+id/videoimage1"  
	    android:layout_width="89px" 
	    android:layout_height="89px" 
	    android:layout_marginLeft="12px"
	    android:src="@drawable/news_list_img"/>
	<LinearLayout
		android:layout_width="313px"
		android:layout_height="100px"
		android:layout_marginLeft="12px"
		android:orientation="vertical"
		android:gravity="center_vertical">
	<TextView
		android:id="@+id/videotext1"
		android:layout_width="313px"
		android:textColor="#000000"
		android:text="[剑灵] 妖艳女刺客登场妖艳女刺客登场妖艳女刺客登"
		android:layout_height="wrap_content"/>  
	
    <LinearLayout
		android:layout_width="313px"
		android:layout_height="wrap_content"
		android:orientation="horizontal">
		<TextView
    	android:id="@+id/video_ctitle1"
    	android:textColor="#000000"
    	android:textSize="10dp"
    	android:layout_below="@+id/videotext"
    	android:text="妖艳女刺客登场妖艳女刺客登场妖艳女刺客登"
		android:layout_width="225px"
		android:layout_height="wrap_content"/>
    <TextView
    	android:id="@+id/video_inputtime1"
    	android:textColor="#000000"
    	android:textSize="10dp"
    	android:text="09:53:98"
    	android:layout_marginLeft="12px"
    	android:layout_width="80px"
    	android:layout_height="wrap_content"/>
    </LinearLayout>
   </LinearLayout>
</LinearLayout>

   
   
   <LinearLayout 
   android:id="@+id/layout2"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="100px"
     android:gravity="center_vertical"
    android:background="@drawable/news_list_context_bg">
    <ImageView
		android:id="@+id/videoimage2"  
	    android:layout_width="89px" 
	    android:layout_height="89px" 
	    android:layout_marginLeft="12px"
