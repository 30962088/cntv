<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="480px"
    android:layout_height="800px" 
    android:background="@drawable/pic_d_cb"
    android:orientation="vertical">
<RelativeLayout
	android:id="@+id/gridview_layout"
	android:layout_width="fill_parent"
	android:layout_height="38px"
	android:gravity="center_vertical"
	android:background="@drawable/news_channel_fanhui_bg">
	<ImageButton android:id="@+id/collects_fanhui"
	android:gravity="center"
	android:layout_width="wrap_content"
    android:layout_height="38px"
    android:layout_marginLeft="13px"
    android:background="@drawable/news_channel_return"
    android:layout_alignParentTop="true"/>
</RelativeLayout>
<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="68px"
		android:background="@drawable/cntv_banner">
		<RelativeLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:gravity="center_vertical"
		android:background="@drawable/cntv_banner">
		 <Button
			android:id="@+id/Pic_collect"
			android:background="@drawable/collect_btn"
			android:layout_width="100px"
		    android:layout_height="50px"
		    android:textColor="#ffffff"
		    android:layout_alignParentRight="true"/>
		</RelativeLayout>
	</LinearLayout>
<LinearLayout 
		android:layout_width="fill_parent" 
		android:orientation="vertical" 
		android:gravity="center"
		android:layout_height="594px">
		<LinearLayout 
		android:id="@+id/layout111" 
		android:layout_width="fill_parent" 
		android:layout_height="425px"
		android:gravity="center">
    <ImageView 
    android:layout_width="432px" 
    android:layout_height="425px" 
    android:paddingTop="20dp" 
    android:src="@drawable/img_big" 
    android:id="@+id/pictures_img_big" 
    />
    </LinearLayout>
    <TextView android:textSize="20dp" 
    android:textColor="#ffffff" 
    android:layout_marginTop="24dp"
    android:text="aaaaaaaaaaaaaaaaaaa" android:textStyle="bold" 
    android:id="@+id/pictures_title" 
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content"
    android:gravity="center"></TextView>
</LinearLayout>

<AbsoluteLayout 
		android:orientation="horizontal"
	    android:layout_width="fill_parent"
	    android:layout_marginBottom="0dp"
	    android:layout_height="64px">

<LinearLayout 
		android:id="@+id/l1"
	    android:orientation="horizontal"
	    android:layout_width="fill_parent"
	    android:layout_height="38px"
	    android:layout_x="0dp"
	    android:layout_y="26px"
	    android:gravity="center"
	    android:layout_alignParentBottom="true"
	    android:background="@drawable/botton_bg">
    <ImageView 
    android:id="@+id/pictures_left" 
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:src="@drawable/zuo" 
    />
    
    <TextView 
    android:id="@+id/pictures_currentpage" 
     android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:text="1" 
    android:gravity="center"
    android:textColor="#ffffff" 
    android:textStyle="bold" 
    android:textSize="20dp" 
    android:paddingLeft="30dp"/>
    
    <TextView 
     android:id="@+id/pictures_finalpage" 
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:text="TextView" 
    android:gravity="center"
    android:textColor="#ffffff" 
    android:textStyle="bold" 
    android:paddingRight="30px"
    android:textSize="20dp"/>
     <ImageView
     android:id="@+id/pictures_right" 
     android:layout_height="wrap_content"
     android:layout_width="wrap_content" 
     android:src="@drawable/you"
     />
</LinearLayout>



<LinearLayout 	
	android:id="@+id/Pic_Layout"
	android:orientation="horizontal"
	android:layout_alignParentBottom="true"
	android:layout_width="fill_parent"
	android:gravity="center"
	android:layout_x="0dp"
	android:layout_y="0dp"
	android:visibility="invisible"
    android:layout_height="64px"
	android:background="@drawable/news_buttom">
	<ImageButton
	android:id="@+id/pictures_bib1"
	android:layout_width="120px"
    android:layout_height="64px"
    android:background="@drawable/news_news1"/>
	<ImageButton 
	android:background="@drawable/news_videos1" 
	android:id="@+id/pictures_bib2" 	
	android:layout_width="120px"
    android:layout_height="64px"></ImageButton>
    <ImageButton
	android:id="@+id/pictures_bib3"
	android:layout_width="120px"
    android:layout_height="64px"
    android:background="@drawable/news_collects1"/>
    <ImageButton
	android:id="@+id/pictures_bib4"
	android:layout_width="120px"
    android:layout_height="64px"
    android:background="@drawable/news_pictures2"/>
</LinearLayout>


</AbsoluteLayout>
</LinearLayout>
