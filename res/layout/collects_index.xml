<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/banner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@drawable/news_channel_fanhui_bg" />

            <ImageButton
                android:background="#00000000"
                android:id="@+id/news_fanhui"
                android:layout_width="40dp"
                android:layout_height="19dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="7dp" >
            </ImageButton>
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/cntv_banner" >
        </ImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="0px"
            android:background="@drawable/news_channel_bg" >

            <GridView
                android:id="@+id/news_channel_gridview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:columnWidth="44dp"
                android:gravity="center"
                android:horizontalSpacing="12.5dp"
                android:numColumns="3"
                android:paddingLeft="15dp"
                android:verticalSpacing="0px" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/news_buttom"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/index_news"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:src="@drawable/news_news1" >
        </ImageView>

        <ImageView
            android:visibility="gone"
            android:id="@+id/index_videos"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:src="@drawable/news_videos1" >
        </ImageView>

        <ImageView
            android:id="@+id/index_collects"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:src="@drawable/news_collects1" >
        </ImageView>

        <ImageView
            android:visibility="gone"
            android:id="@+id/index_pic"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:src="@drawable/news_pictures1" >
        </ImageView>
    </LinearLayout>

</LinearLayout>