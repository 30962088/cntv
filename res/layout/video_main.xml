<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="480px"
    android:layout_height="800px"
    android:background="@drawable/pictures_all_bg"
    >
	<LinearLayout
		android:layout_width="480px"
		android:layout_height="68px"
		android:background="@drawable/cntv_banner"/>
	<LinearLayout
		android:layout_width="480px"
		android:layout_height="43px"
		android:orientation="horizontal">
		<TextView
			android:id="@+id/firstGame"
			android:gravity="center"
			android:text="第一游戏"
			android:textColor="#ffffff"
			android:layout_width="160px"
			android:layout_height="43px"
			android:background="@drawable/videos_toppicked"></TextView>
		<TextView
			android:id="@+id/weibokong"
			android:gravity="center"
			android:text="微博控"
			android:textColor="#000000"
			android:layout_width="160px"
			android:layout_height="43px"
			android:background="@drawable/videos_topunpicked"></TextView>
		<TextView
			android:id="@+id/gamevideo"
			android:gravity="center"
			android:text="游戏视频"
			android:textColor="#000000"
			android:layout_width="160px"
			android:layout_height="43px"
			android:background="@drawable/videos_topunpicked1"></TextView>
	</LinearLayout>
	<LinearLayout
		android:id="@+id/bodyView"
		android:layout_width="480px"
		android:layout_height="599px">
	</LinearLayout>

	
	<LinearLayout 
	android:orientation="horizontal"
	android:layout_width="480px"
	android:gravity="center"
    android:layout_height="64px"
	android:background="@drawable/botton_bg">
	<ImageButton
	android:id="@+id/pictures_bib1"
	android:layout_width="120px"
    android:layout_height="64px"
    android:background="@drawable/news_news1"/>
	<ImageButton 
	android:background="@drawable/news_videos1" 
	android:id="@+id/pictures_bib2" 	
	android:layout_width="120px"
    android:layout_height="64px"></ImageButton>
    <ImageButton
	android:id="@+id/pictures_bib3"
	android:layout_width="120px"
    android:layout_height="64px"
    android:background="@drawable/news_collects2"/>
    <ImageButton
	android:id="@+id/pictures_bib4"
	android:layout_width="120px"
    android:layout_height="64px"
    android:background="@drawable/news_pictures1"/>
</LinearLayout>
	
</LinearLayout>
