<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/pictures_all_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/banner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/cntv_banner" />

        <LinearLayout
            android:id="@+id/top_menu"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@drawable/cntv_news_daohang"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/news_industry"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:background="@drawable/news_topmenu_bg1"
                android:gravity="center"
                android:text="产业新闻"
                android:textColor="#000000"
                android:textSize="12dip" >
            </TextView>

            <TextView
                android:id="@+id/news_web_game"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:background="@drawable/news_topmenu_bg1"
                android:gravity="center"
                android:text="网络游戏"
                android:textColor="#000000"
                android:textSize="12dip" >
            </TextView>

            <TextView
                android:id="@+id/news_single_game"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:background="@drawable/news_topmenu_bg1"
                android:gravity="center"
                android:text="单机游戏"
                android:textColor="#000000"
                android:textSize="12dip" >
            </TextView>

            <TextView
                android:id="@+id/news_home_game"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:background="@drawable/news_topmenu_bg1"
                android:gravity="center"
                android:text="家用游戏"
                android:textColor="#000000"
                android:textSize="12dip" >
            </TextView>

            <TextView
                android:id="@+id/news_more_channel"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:background="@drawable/news_topmenu_more_bg1"
                android:gravity="center"
                android:text="更多频道"
                android:textColor="#000000"
                android:textSize="12dip" >
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/index_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@drawable/news_index_img" >
            </ImageView>

            <TextView
                android:id="@+id/index_tuijian_title"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:background="#5A5A5A"
                android:gravity="center"
                android:text="抱歉，网络异常，请检查网络！"
                android:textColor="#ffffff"
                android:textSize="12dip" >
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >

            <ListView
                android:id="@+id/news_listview"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >
            </ListView>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:background="@drawable/news_buttom"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/index_news"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/news_news1" >
        </ImageView>

        <ImageView
            android:visibility="gone"
            android:id="@+id/index_videos"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/index_news"
            android:src="@drawable/news_videos1" >
        </ImageView>

        <ImageView
            android:id="@+id/index_collects"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/index_videos"
            android:src="@drawable/news_collects1" >
        </ImageView>

        <ImageView
            android:visibility="gone"
            android:id="@+id/index_pic"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/index_collects"
            android:src="@drawable/news_pictures1" >
        </ImageView>
    </LinearLayout>

</LinearLayout>